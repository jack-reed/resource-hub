{{!--
  Choose a Resource Page

  Contains: Dynamically Populated Table of Resources
--}}

{{>header}}

<br>
{{#if resources}}
<table class="govuk-table">
    <caption class="govuk-table__caption">Resources available to book</caption>
    <thead class="govuk-table__head">
    <tr class="govuk-table__row">
        <th class="govuk-table__header" scope="col">Resource</th>
        <th class="govuk-table__header" scope="col">User Capacity</th>
        <th class="govuk-table__header" scope="col">Features</th>
    </tr>
    </thead>
    {{#each resources}}
        <tbody class="govuk-table__body">
        <tr class="govuk-table__row">
            <th class="govuk-link govuk-table__cell" scope="row"><a href="/book/{{this.id}}">{{this.name}}</a></th>
            <td class="govuk-table__cell">{{this.userCapacity}}</td>
            <td class="govuk-table__cell">{{#if this.features}}{{#each
                    this.features}}{{this.description}}{{/each}}{{else}}N/A{{/if}}</td>
        </tr>
        </tbody>
    {{/each}}
</table>
{{/if}}


{{>footer}}


<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
</body>

</html>