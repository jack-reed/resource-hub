{{>header}}


<div class="govuk-grid-row">
    {{#if book}}
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-panel govuk-panel--confirmation">
                <div class="govuk-panel__body">
                    Your booking for:
                    <br><strong>{{name}}</strong>
                    <br>Has been confirmed for
                    <br><strong>{{start}}</strong> until <strong>{{end}}</strong>
                    <br>
                    <br>
                    Please note your Booking Reference for cancellations:
                    <br><strong id="bookingId">{{bookingId}}</strong>
                </div>

            </div>
            <h2 class="govuk-heading-m">What happens next</h2>
            <p class="govuk-body">
                Return to the <a class="govuk-link" href="/">Homepage</a>
            </p>
            <p class="govuk-body">
                <a class="govuk-link" href="/book/{{resourceId}}">Remove</a> this booking
            </p>
        </div>
    {{else}}
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-panel govuk-panel--confirmation">
                <div class="govuk-panel__body">
                    Your booking has been cancelled
                </div>
            </div>
            <h2 class="govuk-heading-m">What happens next</h2>
            <p class="govuk-body">
                Return to the <a class="govuk-link" href="/">Homepage</a>
            </p>
            <p class="govuk-body">
                <a id="another-booking" class="govuk-link" href="/list">Make</a> another booking
            </p>
        </div>
    {{/if}}
</div>

{{>footer}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/javascripts/talk.js"></script>
</body>

</html>